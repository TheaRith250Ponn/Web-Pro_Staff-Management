<%- include ('partials/header.ejs'); -%>
    <div class="table-wrapper">
        <% if (staffs.length > 0) {%>
            <table class="table table-hovered table-bordered">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Username</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% staffs.forEach((staff, index) => { %>
                        <tr>
                            <th scope="row"><%= staff.id %></th>
                            <td><img src="/assets/img/<%= staff.image %>" class="rounded-circle staff-img" alt=""></td>
                            <td><%= staff.first_name %></td>
                            <td><%= staff.last_name %></td>
                            <td><%= staff.position %></td>
                            <td><%= staff.number %></td>
                            <td>@<%= staff.user_name %></td>
                            <td>
                                <a href="/edit/<%= staff.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= staff.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No staffs found. Go <a href="/add" >here</a> to add staffs.</p>
        <% } %>
    </div>
</div>
</body>
</html>